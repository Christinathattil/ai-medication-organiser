# Supabase Configuration (FREE - 500MB storage)
# Get from: https://supabase.com/dashboard
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Database Connection for Persistent Sessions (REQUIRED for production)
# Get from: Supabase → Settings → Database → Connection string (URI)
# Without this, sessions reset on server restart
# With this, user sessions persist and no data is lost
DATABASE_URL=postgresql://postgres.[project]:[password]@aws-0-us-west-1.pooler.supabase.com:5432/postgres

# Fast2SMS (FREE - 50 SMS/day)
# Get API key from: https://www.fast2sms.com/dashboard/dev-api
# Register free account and get API key from Developer API section
FAST2SMS_API_KEY=your_fast2sms_api_key

# Groq AI (FREE - 14,400 requests/day)
# Get from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Google OAuth (for user authentication)
# See GOOGLE-AUTH-SETUP.md for instructions
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# For local development:
GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback
# For production (Render), update to your actual domain:
# GOOGLE_CALLBACK_URL=https://your-app.onrender.com/auth/google/callback

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your_random_session_secret_here
